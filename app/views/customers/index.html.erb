<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Customers</h1>
  <% if policy(Customer).new? %>
    <%= link_to "New Customer", new_customer_path, class: "btn btn-primary" %>
  <% end %>
</div>

<div class="card">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.name %></td>
              <td><%= customer.email %></td>
              <td><%= customer.phone %></td>
              <td>
                <%= link_to "View", customer, class: "btn btn-sm btn-info text-white" %>
                <% if policy(customer).edit? %>
                  <%= link_to "Edit", edit_customer_path(customer), class: "btn btn-sm btn-warning" %>
                <% end %>
                <% if policy(customer).destroy? %>
                  <%= button_to "Delete", customer, method: :delete, class: "btn btn-sm btn-danger", form: { data: { turbo_confirm: "Are you sure?" } } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= paginate @customers %>
  </div>
</div>
